<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".penjual.tambah_ikan">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Ikan"/>
            <EditText
                android:id="@+id/et_namaikan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Ikan"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stok"/>
            <EditText
                android:id="@+id/et_stokikan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Stok Ikan"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harga"/>
            <EditText
                android:id="@+id/et_hargaikan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Harga"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gambar Ikan"/>
            <ImageView
                android:id="@+id/iv_fotoikan"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="fitXY"/>
            <Button
                android:id="@+id/btn_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Input"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>